<% include partials/header %>
<div class="ui main text container segment" id="mar3" width="350px">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<form method="POST" action="/blogs/<%= blog._id %>?_method=PUT" class="ui form" style={width:0.5em;}>
	<div class="field">
    	<label>Title:</label>
		<input type="text" name="blog[title]" placeholder="name" value="<%= blog.title %>">
  	</div>
  	<div class="field">
    	<label>Image source:</label>
		<input type="text" name="blog[image]" placeholder="" value="<%= blog.image %>">
  	</div>
	<div class="field">
    	<label>Description:</label>
		<textarea name="blog[body]"><%= blog.body %></textarea>
  	</div>
	<div class="field">
		<input class="ui violet basic button" type="submit">
	</div>
	</form>
</div>
<% include partials/footer %>
<% include partials/header %>
<div class="ui main text container segment" id="mar" width="350px">
	<div class="ui huge header">New Blog</div>
	<form method="POST" action="/blogs" class="ui form" style={width:0.5em;}>
	<div class="field">
    	<label>Title:</label>
		<input type="text" name="blog[title]" placeholder="name">
  	</div>
  	<div class="field">
    	<label>Image source:</label>
		<input type="text" name="blog[image]" placeholder="">
  	</div>
	<div class="field">
    	<label>Description:</label>
		<textarea name="blog[body]"></textarea>
  	</div>
	<div class="field">
		<input class="ui violet basic button" type="submit">
	</div>
	</form>
</div>
